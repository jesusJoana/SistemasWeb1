{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nombre": { "type": "string" },
    "direccion": {
      "type": "object",
      "properties": {
        "calle": { "type": "string" },
        "ciudad": { "type": "string" },
        "numero": { "type":  "integer"}
      },
      "required": ["calle", "ciudad"],
      "additionalProperties": false
    },
    "telefonos": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "movil": { "type": "integer" }
            },
            "required": ["movil"],
            "additionalProperties": false
          },
          {
            "properties": {
              "fijo": { "type": "integer" }
            },
            "required": ["fijo"],
            "additionalProperties": false
          }
        ]
      }
    },
    "edad": { "type": "integer", "minimum": 0 }
  },
  "required": ["nombre", "direccion", "telefonos", "edad"],
  "additionalProperties": false
}
